# Google Cloud Configuration
GCP_PROJECT_ID=your-gcp-project-id
GCP_DATASET_ID=your-bigquery-dataset-id
GCP_LOCATION=US
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json

# LLM Configuration
OPENAI_API_KEY=sk-your-openai-api-key
LLM_MODEL=gpt-4
LLM_TEMPERATURE=0.0
MAX_TOKENS=2000

# Security Configuration
ENCRYPTION_KEY=your-base64-encoded-encryption-key
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
ENABLE_AUDIT_LOG=true
AUDIT_LOG_BUCKET=gs://your-audit-log-bucket

# Application Configuration
ENVIRONMENT=development
APP_NAME=BigQuery-LangChain-Agent
APP_VERSION=1.0.0
API_PORT=8000

# HIPAA Compliance Settings
ENABLE_ENCRYPTION=true
ENABLE_AUDIT_TRAIL=true
DATA_RETENTION_DAYS=2555  # 7 years for HIPAA
PHI_FIELDS=patient_id,ssn,medical_record_number,name,dob

# Rate Limiting
MAX_QUERIES_PER_MINUTE=10
MAX_QUERIES_PER_HOUR=100

# BigQuery Specific
BIGQUERY_MAX_RESULTS=1000
BIGQUERY_TIMEOUT_SECONDS=300
ENABLE_QUERY_CACHE=true
